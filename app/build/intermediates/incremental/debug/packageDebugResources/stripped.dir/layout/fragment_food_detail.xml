<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:padding="20dp"
    tools:context=".ui.detail.FoodDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/detailPostCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="14dp"
            app:shapeAppearance="@style/ShapeAppearance.Restaurant.Large">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/postHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="20dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/postAvatar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher_round"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.SmallComponent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/postTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textAppearance="@style/TextAppearance.Restaurant.Toolbar" />

                        <TextView
                            android:id="@+id/postSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textAppearance="@style/TextAppearance.Restaurant.Body"
                            tools:text="دستور ویژه سرآشپز • ۲۴ ساعت پیش" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/postBadge"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="@string/food_detail_actions_save"
                        android:src="@drawable/ic_bookmark_border"
                        app:tint="@color/brand_secondary" />
                </LinearLayout>

                <com.ramin.restaurantapp.ui.common.SquareFrameLayout
                    android:id="@+id/mediaContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/mediaPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:overScrollMode="never"
                        tools:listitem="@layout/item_media_page" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/mediaIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="12dp"
                        app:tabGravity="center"
                        app:tabIndicatorColor="@color/brand_secondary"
                        app:tabIndicatorHeight="3dp"
                        app:tabMode="fixed"
                        app:tabRippleColor="@android:color/transparent" />
                </com.ramin.restaurantapp.ui.common.SquareFrameLayout>

                <LinearLayout
                    android:id="@+id/postActions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="12dp">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/likeButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/food_detail_actions_like"
                        android:padding="6dp"
                        android:src="@drawable/ic_favorite_border"
                        app:tint="?attr/colorOnSurface" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/shareButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/food_detail_actions_share"
                        android:padding="6dp"
                        android:src="@drawable/ic_share"
                        app:tint="?attr/colorOnSurface" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/saveButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/food_detail_actions_save"
                        android:padding="6dp"
                        android:src="@drawable/ic_bookmark_border"
                        app:tint="?attr/colorOnSurface" />
                </LinearLayout>

                <TextView
                    android:id="@+id/foodTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textAppearance="@style/TextAppearance.Restaurant.Toolbar"
                    android:textStyle="bold"
                    tools:text="نام غذا" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/detailChipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="20dp"
                    app:singleLine="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/detailCategoryChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="دسته"
                        app:chipIconVisible="false" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/detailSubcategoryChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="زیر دسته"
                        android:visibility="gone"
                        app:chipIconVisible="false" />
                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:id="@+id/foodDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="20dp"
                    android:lineSpacingExtra="4dp"
                    android:textAppearance="@style/TextAppearance.Restaurant.Body"
                    tools:text="توضیحات غذا" />

                <TextView
                    android:id="@+id/foodDetailFooter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/food_detail_footer"
                    android:textAppearance="@style/TextAppearance.Restaurant.Subtitle" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/reserveButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="@string/reserve_button"
                    app:icon="@android:drawable/ic_menu_my_calendar"
                    app:iconGravity="textStart"
                    app:iconTint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
