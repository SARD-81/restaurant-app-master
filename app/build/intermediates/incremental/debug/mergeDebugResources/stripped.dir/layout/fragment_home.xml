<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:padding="20dp"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/heroCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hero_gradient"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_title"
                    android:textAppearance="@style/TextAppearance.Restaurant.Title" />

                <TextView
                    android:id="@+id/homeSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/home_subtitle"
                    android:textAppearance="@style/TextAppearance.Restaurant.Body" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fullMenuButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/home_cta"
                    app:icon="@android:drawable/ic_menu_view"
                    app:iconGravity="textStart"
                    app:iconTint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/homeCollectionsCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/home_collections_caption"
            android:textAppearance="@style/TextAppearance.Restaurant.Subtitle" />

        <LinearLayout
            android:id="@+id/homeCollectionsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/likedCollectionCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                app:shapeAppearance="@style/ShapeAppearance.Restaurant.Large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/collection_like_background"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="@string/home_liked_title"
                        android:src="@drawable/ic_favorite_filled"
                        android:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/likedCollectionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/home_liked_title"
                        android:textAppearance="@style/TextAppearance.Restaurant.Toolbar"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/likedCollectionSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/home_liked_subtitle"
                        android:textAppearance="@style/TextAppearance.Restaurant.Body"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/likedCollectionCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textAppearance="@style/TextAppearance.Restaurant.Body"
                        android:textColor="@android:color/white"
                        tools:text="۳ انتخاب" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/savedCollectionCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                app:shapeAppearance="@style/ShapeAppearance.Restaurant.Large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/collection_saved_background"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="@string/home_saved_title"
                        android:src="@drawable/ic_bookmark_filled"
                        android:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/savedCollectionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/home_saved_title"
                        android:textAppearance="@style/TextAppearance.Restaurant.Toolbar"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/savedCollectionSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/home_saved_subtitle"
                        android:textAppearance="@style/TextAppearance.Restaurant.Body"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/savedCollectionCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textAppearance="@style/TextAppearance.Restaurant.Body"
                        android:textColor="@android:color/white"
                        tools:text="۱ انتخاب" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/searchInputLayout"
            style="@style/Widget.Restaurant.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_hint"
            app:endIconMode="clear_text"
            app:startIconDrawable="@android:drawable/ic_menu_search">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurfaceVariant" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/quickCategoryHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:text="@string/home_quick_categories_title"
            android:textAppearance="@style/TextAppearance.Restaurant.Subtitle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/quickCategoryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:paddingBottom="4dp"
            tools:listitem="@layout/item_category_chip" />

        <LinearLayout
            android:id="@+id/searchResultsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/searchResultsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_results_title"
                android:textAppearance="@style/TextAppearance.Restaurant.Subtitle" />

            <TextView
                android:id="@+id/searchResultsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/TextAppearance.Restaurant.Body"
                tools:text="12 نتیجه یافت شد" />

            <TextView
                android:id="@+id/searchResultsEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/search_results_empty"
                android:textAppearance="@style/TextAppearance.Restaurant.Body"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/searchResultsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                tools:listitem="@layout/item_food" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/categoriesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/categoryHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/home_categories_title"
                android:textAppearance="@style/TextAppearance.Restaurant.Subtitle" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categoryRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="8dp"
                tools:listitem="@layout/item_category" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
