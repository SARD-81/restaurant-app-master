<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.RestaurantApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>
        
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container</item>
        
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorOnTertiary">@color/on_tertiary</item>
        <item name="colorTertiaryContainer">@color/tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/on_tertiary_container</item>
        
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <item name="colorOutline">@color/outline</item>
        <item name="colorOutlineVariant">@color/outline_variant</item>
        
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="colorErrorContainer">@color/error_container</item>
        <item name="colorOnErrorContainer">@color/on_error_container</item>
        
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <item name="android:windowBackground">@color/background</item>
        
        <item name="android:fontFamily">@font/vazirmatn_regular</item>
        <item name="fontFamily">@font/vazirmatn_regular</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="toolbarStyle">@style/Widget.Restaurant.Toolbar</item>
        <item name="materialButtonStyle">@style/Widget.Restaurant.Button</item>
        <item name="materialCardViewStyle">@style/Widget.Restaurant.Card</item>
        <item name="chipStyle">@style/Widget.Restaurant.Chip</item>
        <item name="textInputStyle">@style/Widget.Restaurant.TextInputLayout</item>
    </style>

    <style name="Widget.Restaurant.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/toolbar_background</item>
        <item name="titleTextAppearance">@style/TextAppearance.Restaurant.Toolbar</item>
        <item name="android:titleTextColor">@color/text_on_primary</item>
        <item name="android:subtitleTextColor">@color/text_secondary</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Restaurant.Toolbar</item>
    </style>

    <style name="ThemeOverlay.Restaurant.Toolbar" parent="">
        <item name="colorPrimary">@color/on_primary</item>
        <item name="colorOnPrimary">@color/primary</item>
    </style>

    <style name="Widget.Restaurant.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/on_secondary</item>
        <item name="android:fontFamily">@font/vazirmatn_medium</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:insetTop">12dp</item>
        <item name="android:insetBottom">12dp</item>
    </style>

    <style name="Widget.Restaurant.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">8dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Restaurant.Large</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.Restaurant.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/divider_variant</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_on_surface_variant</item>
        <item name="android:fontFamily">@font/vazirmatn_medium</item>
        <item name="chipIconVisible">false</item>
        <item name="chipCornerRadius">16dp</item>
    </style>

    <style name="Widget.Restaurant.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/outline</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="hintTextColor">@color/text_muted</item>
        <item name="android:textColorHint">@color/text_muted</item>
        <item name="endIconTint">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Restaurant.Toolbar" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/vazirmatn_semibold</item>
        <item name="fontFamily">@font/vazirmatn_semibold</item>
    </style>

    <style name="TextAppearance.Restaurant.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/vazirmatn_semibold</item>
        <item name="fontFamily">@font/vazirmatn_semibold</item>
    </style>

    <style name="TextAppearance.Restaurant.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:fontFamily">@font/vazirmatn_medium</item>
        <item name="fontFamily">@font/vazirmatn_medium</item>
    </style>

    <style name="TextAppearance.Restaurant.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/vazirmatn_regular</item>
        <item name="fontFamily">@font/vazirmatn_regular</item>
    </style>

    <style name="ShapeAppearance.Restaurant.Large" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">26dp</item>
    </style>

    <style name="ShapeAppearance.Restaurant.Medium" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>
</resources>
