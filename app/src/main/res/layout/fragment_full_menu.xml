<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:padding="20dp"
    tools:context=".ui.food.FullMenuFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fullMenuHero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.Restaurant.Large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hero_gradient"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/fullMenuTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/full_menu_title"
                android:textAppearance="@style/TextAppearance.Restaurant.Toolbar"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fullMenuSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/full_menu_subtitle"
                android:textAppearance="@style/TextAppearance.Restaurant.Body" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/fullMenuCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textAppearance="@style/TextAppearance.Restaurant.Body"
        app:layout_constraintBottom_toTopOf="@+id/categoryFilterChipGroup"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="24 آیتم در این دسته موجود است" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/categoryFilterChipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/fullMenuRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:singleLine="true"
        app:singleSelection="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fullMenuRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryFilterChipGroup"
        tools:listitem="@layout/item_food" />

    <TextView
        android:id="@+id/fullMenuEmptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/full_menu_empty"
        android:textAppearance="@style/TextAppearance.Restaurant.Body"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
