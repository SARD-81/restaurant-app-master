<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:padding="20dp"
    tools:context=".ui.food.FoodListFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/foodHeaderCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/brand_surface_variant"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/foodListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Restaurant.Toolbar"
                android:textColor="@color/text_primary_on_dark"
                tools:text="غذاها" />

            <TextView
                android:id="@+id/foodListSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/food_list_subtitle_default"
                android:textAppearance="@style/TextAppearance.Restaurant.Body" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/foodChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/categoryChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="دسته"
                    app:chipIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/subcategoryChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="زیر دسته"
                    android:visibility="gone"
                    app:chipIconVisible="false" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/foodRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/foodHeaderCard"
        tools:listitem="@layout/item_food" />

    <TextView
        android:id="@+id/emptyView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/no_items_available"
        android:textAppearance="@style/TextAppearance.Restaurant.Body"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
